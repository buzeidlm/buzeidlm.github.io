            <xs:sequence>
              <xs:element type="xs:string" name="nombre"/>
              <xs:element type="xs:string" name="fecha_inicio"/>
              <xs:element type="xs:string" name="fecha_fin"/>
              <xs:element type="xs:string" name="duracion"/>
              <xs:element type="xs:string" name="medios_de_transporte"/>
              <xs:element type="xs:string" name="anecdotas"/>
              <xs:element type="xs:string" name="foto"/>
            </xs:sequence>
            <xs:attribute type="xs:string" name="id" use="required"/>
